startup_message off
defscrollback 5000
term "screen-256color"
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm:VE='
defbce on
vbell off

bind h focus left
bind j focus down
bind k focus up
bind l focus right

#logfile "$HOME/.screenlog.%S.%n"
#deflog on

caption always '%{= Gk}%0c:%0s %{= Bk} %n %t %{= bw} %?%W%?'

# Layout for diff view
layout new diffview
layout new fs
