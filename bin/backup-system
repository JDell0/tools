#!/bin/sh

set -eux

bkupdir="/backup"

[ ${UID:-`id -u`} -ne 0 ] && {
    echo Error: root privelidges required >&2
    exit 1
}

[ ! -d $bkupdir ] && {
    echo Creating directory -- $bkupdir
    mkdir -p $bkupdir || {
        echo Error: problem creating directory -- $bkupdir >&2
        exit 1
    }
}

umount $bkupdir/boot ||
umount $bkupdir ||
true

mount $bkupdir

rsync \
    --archive \
    --update \
    --verbose \
    --checksum \
    --fuzzy \
    --links \
    --hard-links \
    --perms \
    --owner \
    --group \
    --timeout=0 \
    --itemize-changes \
    --one-file-system \
    --exclude="$bkupdir" \
    --exclude="/tmp/*" \
    --exclude="/run/*" \
    --exclude="/lost+found" \
    -F \
/ $bkupdir/

mount $bkupdir/boot

rsync \
    --archive \
    --update \
    --verbose \
    --checksum \
    --fuzzy \
    --links \
    --hard-links \
    --perms \
    --owner \
    --group \
    --timeout=0 \
    --itemize-changes \
    --one-file-system \
    --exclude="/lost+found" \
    -F \
/boot/ $bkupdir/boot/

umount $bkupdir/boot
umount $bkupdir
